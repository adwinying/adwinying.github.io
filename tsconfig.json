{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["astro/env"],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
